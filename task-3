<body>

  <div class="container">
    <h1>Tic Tac Toe</h1>
    <div id="status">Your Turn (X)</div>

    <div class="board" id="board">
      <div class="cell"></div>
      <div class="cell"></div>
      <div class="cell"></div>
      <div class="cell"></div>
      <div class="cell"></div>
      <div class="cell"></div>
      <div class="cell"></div>
      <div class="cell"></div>
      <div class="cell"></div>
    </div>

    <button onclick="restartGame()">Restart Game</button>
  </div>

  <!-- ===== JavaScript ===== -->
  <script>
    const cells = document.querySelectorAll(".cell");
    const statusText = document.getElementById("status");

    let board = ["", "", "", "", "", "", "", "", ""];
    let gameActive = true;

    const player = "X";
    const computer = "O";

    const winConditions = [
      [0,1,2], [3,4,5], [6,7,8],
      [0,3,6], [1,4,7], [2,5,8],
      [0,4,8], [2,4,6]
    ];

    cells.forEach((cell, index) => {
      cell.addEventListener("click", () => playerMove(index));
    });

    function playerMove(index) {
      if (board[index] !== "" || !gameActive) return;

      board[index] = player;
      cells[index].textContent = player;

      if (checkWinner(player)) {
        statusText.textContent = "ðŸŽ‰ You Win!";
        gameActive = false;
        return;
      }

      if (board.every(cell => cell !== "")) {
        statusText.textContent = "ðŸ¤ Draw!";
        gameActive = false;
        return;
      }

      statusText.textContent = "Computer Turn...";
      setTimeout(computerMove, 500);
    }

    function computerMove() {
      let emptyCells = board
        .map((val, idx) => val === "" ? idx : null)
        .filter(val => val !== null);

      let randomIndex = emptyCells[Math.floor(Math.random() * emptyCells.length)];
      board[randomIndex] = computer;
      cells[randomIndex].textContent = computer;

      if (checkWinner(computer)) {
        statusText.textContent = "ðŸ’» Computer Wins!";
        gameActive = false;
        return;
      }

      if (board.every(cell => cell !== "")) {
        statusText.textContent = "ðŸ¤ Draw!";
        gameActive = false;
        return;
      }

      statusText.textContent = "Your Turn (X)";
    }

    function checkWinner(player) {
      return winConditions.some(condition =>
        condition.every(index => board[index] === player)
      );
    }

    function restartGame() {
      board = ["", "", "", "", "", "", "", "", ""];
      gameActive = true;
      statusText.textContent = "Your Turn (X)";
      cells.forEach(cell => cell.textContent = "");
    }
  </script>

</body>
</html>
