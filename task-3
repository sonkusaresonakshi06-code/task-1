    }

    h1 {
      margin-bottom: 10px;
    }

    #status {
      font-size: 18px;
      margin: 10px 0;
    }

    .board {
      display: grid;
      grid-template-columns: repeat(3, 100px);
      gap: 10px;
      margin: 20px auto;
    }

    .cell {
      width: 100px;
