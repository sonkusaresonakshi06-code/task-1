<body>

  <div class="page">
    <div class="todo-card">
      <h1>üìù To-Do List</h1>
      <p class="subtitle">Organize your tasks efficiently</p>

      <div class="input-row">
        <input type="text" id="taskInput" placeholder="Enter your task">
        <input type="datetime-local" id="taskDate">
        <button id="addBtn">Add</button>
      </div>

      <ul id="taskList"></ul>
    </div>
  </div>

  <!-- ===== JavaScript ===== -->
  <script>
    const taskInput = document.getElementById("taskInput");
    const taskDate = document.getElementById("taskDate");
    const addBtn = document.getElementById("addBtn");
    const taskList = document.getElementById("taskList");

    addBtn.addEventListener("click", addTask);

    function addTask() {
      if (taskInput.value.trim() === "") {
        alert("Please enter a task");
        return;
      }

      const li = document.createElement("li");

      const taskText = document.createElement("div");
      taskText.className = "task-text";
      taskText.innerHTML = `
        <strong>${taskInput.value}</strong>
        <small>${taskDate.value || "No date & time set"}</small>
      `;

      taskText.onclick = () => {
        taskText.classList.toggle("completed");
      };

      const actions = document.createElement("div");
      actions.className = "actions";

      const editBtn = document.createElement("button");
      editBtn.className = "edit";
      editBtn.textContent = "Edit";
      editBtn.onclick = () => {
        const newTask = prompt("Edit task", taskText.querySelector("strong").textContent);
        if (newTask) {
          taskText.querySelector("strong").textContent = newTask;
        }
      };

      const deleteBtn = document.createElement("button");
      deleteBtn.className = "delete";
      deleteBtn.textContent = "Delete";
      deleteBtn.onclick = () => li.remove();

      actions.append(editBtn, deleteBtn);
      li.append(taskText, actions);
      taskList.appendChild(li);

      taskInput.value = "";
      taskDate.value = "";
    }
  </script>

</body>
